@model IEnumerable<DTO.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/restaurant.css"/>
</head>
<body>
        <div class="grid_parent">
            <!-- Column -->
            @foreach (var item in Model)
            {
            <div class="grid_parent">
                <!-- Cover -->
                <!-- Content -->
            
                <div id="restaurant">
                    <a href=@Url.Action("ShowAllProductFromRestaurant", new { id = item.IdRestaurant })>
                   
                        <img id="restaurantImage" src="@item.Picture" width="300" height="200"/>

                    </a>
                    <tr>
                        <td>
                            <h2 class="titleRestaurant">
                                @Html.DisplayFor(modelItem => item.RestaurantName)
                            </h2>
                        </td>
                        <p></p>

                    </tr>
                </div>

                <!-- Button sticks to the bottom -->
            </div>
            }

        </div>
</body>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</html>