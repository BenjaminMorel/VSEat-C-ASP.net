@model IEnumerable<DTO.Order>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDeliveryStaff.cshtml";
}


<h2>Your current orders: </h2>
<br />
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Freight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdOrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdDeliveryStaff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdLocation)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        if (item.IdOrderStatus == 2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Freight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDeliveryStaff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdLocation)
                </td>
                <td>
                    <input type="submit"   value="FINISHED"/>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

